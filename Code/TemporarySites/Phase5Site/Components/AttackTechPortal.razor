@inherits BasePortalComponent
<StackLayout Orientation="EnumOrientation.Horizontal"
             ItemSpacing="20px"
             >
    <StackItem>
        <ImageButtonComponent MainSource="/SaveSelectedTechs.png"
                              HoverSource="SaveSelectedTechsHover.png"
                              OnClick="OnSave" />
        
    </StackItem>
    <StackItem>
        <ImageButtonComponent MainSource="/Cancel.png"
                              HoverSource="/CancelHover.png"
                              OnClick="OnCancel" />
        
    </StackItem>
    <StackItem>
        <ImageButtonComponent MainSource="/SelectAllTechs.png"
                              HoverSource="/SelectAllTechsHover.png"
                              OnClick="() => DataContext.SelectAllAttackTechs()"
                              />
        
    </StackItem>
    <StackItem>
        <ImageButtonComponent MainSource="/UnselectAllTechs.png"
                              HoverSource="/UnselectAllTechsHover.png"
                              OnClick="() => DataContext.UnselectAllAttackTechs()" />
        
    </StackItem>
</StackLayout> 